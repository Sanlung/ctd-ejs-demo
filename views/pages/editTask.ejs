<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <p class="text-center text-primary"><%= message %></p>
      <form action="<%= '/tasks/update/' + task.id %>" method="POST">
        <label for="name">Name:</label><br />
        <input type="text" name="name" value="<%= task.name %>" /><br />
        <% if (task.completed) { %>
        <input type="checkbox" name="complete" value="true" checked />
        <% } else { %>
        <input type="checkbox" name="complete" value="true" />
        <% } %>
        <label for="complete">Completed</label><br />
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/tasks" class="btn btn-primary">Cancel</a>
      </form>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
